<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_height="match_parent"
                tools:context="com.kirshboim.polyjam.RegisteredFragment"
                android:background="@color/background"
>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/registered_text"
              android:id="@+id/registered_text"
              android:textColor="@color/white"
              android:textSize="@dimen/normal_text"
              android:gravity="center"
              android:layout_marginTop="99dp"
              android:layout_below="@+id/imageView2"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALLES  KLAR"
            android:id="@+id/close_button"
            android:onClick="closeButtonClicked"
            android:clickable="true"
            android:textSize="@dimen/normal_text"
            android:layout_marginBottom="85dp"
            android:background="@color/white"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logo_hand"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registered_email_text"
            android:id="@+id/email_text"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text"
            android:gravity="center"
            android:layout_below="@+id/registered_text"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>


    <include layout="@layout/btn_about" />

</RelativeLayout>
