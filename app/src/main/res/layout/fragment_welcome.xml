<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.kirshboim.polyjam.WelcomeFragment"
                android:background="@color/background">

    <TextView android:text="@string/enter_name_cap" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textView2"
              android:textColor="@color/white"
              android:textSize="@dimen/normal_text"
              android:gravity="center_horizontal"
              android:focusableInTouchMode="true"
              android:clickable="false"
              android:layout_above="@+id/name_field"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_marginBottom="24dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_field"
            android:maxLines="1"
            android:inputType="text|textNoSuggestions"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:textSize="@dimen/normal_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>

    <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="setName"
            android:text="OK"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:id="@+id/ok_btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"/>

    <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logo_hand"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>


    <include layout="@layout/btn_about" />

</RelativeLayout>
