<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/black">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s  Go!"
        android:id="@+id/ready_button"
        android:onClick="startPlaying"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="@dimen/normal_text"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preplay_text"
        android:text="Go to speaker"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speaker"
        android:text="X"
        android:layout_marginTop="12dp"
        android:textColor="@color/yellow"
        android:textSize="80sp"
        android:gravity="center"
        android:layout_below="@+id/preplay_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/preplay_text_2"
        android:text="and swipe your fingers on the screen to jam.\n\nViel Spass!"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text"
        android:gravity="center"
        android:layout_below="@+id/speaker"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/imageView2"
        android:src="@drawable/logo_hand"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>